<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/cocktailsFragment">

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="com.example.cocktails9.ui.fragment.cocktails.CocktailsFragment"
        android:label="Cocktails "
        tools:layout="@layout/fragment_cocktails" >
        <action
            android:id="@+id/action_cocktailsFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <argument
            android:name="filterBy"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <action
            android:id="@+id/action_cocktailsFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.cocktails9.ui.fragment.favorites.FavoritesFragment"
        android:label="Favorites "
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cocktails9.ui.fragment.profile.ProfileFragment"
        android:label="Profile "
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.cocktails9.ui.fragment.filter.FilterFragment"
        android:label="Filter "
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_specificFilterFragment"
            app:destination="@id/specificFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/specificFilterFragment"
        android:name="com.example.cocktails9.ui.fragment.filter.SpecificFilterFragment"
        android:label=""
        tools:layout="@layout/fragment_specific_filter" >
        <argument
            android:name="filterBy"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_specificFilterFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment"
            app:popUpTo="@id/cocktailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cocktailDetailsFragment"
        android:name="com.example.cocktails9.ui.fragment.details.CocktailDetailsFragment"
        android:label="Cocktail details "
        tools:layout="@layout/fragment_cocktail_details" >
        <action
            android:id="@+id/action_cocktailDetailsFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment" />
        <argument
            android:name="drinkID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="isFavorite"
            app:argType="boolean" />
    </fragment>
</navigation>